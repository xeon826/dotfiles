{
  "mcpServers": {
    "fetch": {
      "args": ["mcp-server-fetch"],
      "command": "uvx"
    },
    "filesystem": {
      "args": ["-y", "mcp-server-filesystem", "${workspaceFolder}"],
      "command": "/usr/bin/npx",
      "env": {
        "USER_HOME": "${userHome}",
        "WORKSPACE_PATH": "${workspaceFolder}"
      }
    },
    "github": {
      "autoApprove": [],
      "disabled": false,
      "disabled_prompts": [],
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    }
  }
}
