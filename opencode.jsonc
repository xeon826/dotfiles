{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "firecrawl-mcp": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      }
    },
    "fl-figma": {
      "type": "local",
      "command": ["pnpm", "figma-developer-mcp", "--figma-api-key={env:FIGMA_API_KEY}", "--stdio"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "github": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    // "browser-control": {
    //    "type": "local",
    //    "command": ["node", "/home/dan/git_clones/browser-control-mcp/mcp-server/dist/server.js"],
    //    "enabled": true,
    //    "environment": {
    //      "EXTENSION_SECRET": "df26b850-4d2c-4e95-a5f6-7c1d0158158c",
    //      "EXTENSION_PORT": "8090"
    //    }
    //  },
      "browser-kit": {
        "type": "local",
        "command": ["npx", "@mcp-browser-kit/server@latest"],
        "enabled": true
      },
    "octocode": {
      "type": "local",
      "command": ["npx", "octocode-mcp@latest"],
      "enabled": true
    }
  }
}
